<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_below="@+id/sector_layout_sector_container"
    android:background="@color/grey"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/buttons_layout_button_map"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/text_main"
        android:text="@string/look_on_map_upper" />

    <include
        android:id="@+id/buttons_layout_button_menu"
        layout="@layout/button_menu" />

</RelativeLayout>