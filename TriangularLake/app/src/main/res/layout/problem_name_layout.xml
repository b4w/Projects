<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp">

    <TextView
        android:id="@+id/problem_name_layout_name"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/text_main"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/problem_name_layout_favorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/problem_name_layout_name"
        android:layout_toEndOf="@+id/problem_name_layout_name"
        android:layout_toRightOf="@+id/problem_name_layout_name" />

    <TextView
        android:id="@+id/problem_name_layout_grade"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/problem_name_layout_favorite"
        android:layout_toEndOf="@+id/problem_name_layout_favorite"
        android:layout_toRightOf="@+id/problem_name_layout_favorite"
        android:textColor="@color/text_main"
        android:textStyle="bold" />

</RelativeLayout>