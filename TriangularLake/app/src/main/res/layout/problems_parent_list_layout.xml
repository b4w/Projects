<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ImageView
        android:id="@+id/problems_parent_ll_image_letter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/problems_parent_ll_problem_name"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:textColor="@color/text_main"
        android:layout_alignTop="@id/problems_parent_ll_image_letter"
        android:layout_toEndOf="@id/problems_parent_ll_image_letter"
        android:layout_toRightOf="@id/problems_parent_ll_image_letter"  />

    <ImageView
        android:id="@+id/problems_parent_ll_problem_favorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/problems_parent_ll_problem_name"
        android:layout_toEndOf="@id/problems_parent_ll_problem_name"
        android:layout_toRightOf="@id/problems_parent_ll_problem_name" />

    <TextView
        android:id="@+id/problems_parent_ll_problem_grade"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="@color/text_main"
        android:layout_alignTop="@id/problems_parent_ll_problem_favorite"
        android:layout_toEndOf="@id/problems_parent_ll_problem_favorite"
        android:layout_toRightOf="@id/problems_parent_ll_problem_favorite" />

</RelativeLayout>