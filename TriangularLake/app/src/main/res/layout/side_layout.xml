<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/side_layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.triangularlake.constantine.triangularlake.utils.MyViewPager
                    android:id="@+id/side_layout_container_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/side_layout_container_view_pager"
                    android:background="@color/grey"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/side_layout_coordinate_label"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/grey"
                        android:text="Координаты" />

                    <TextView
                        android:id="@+id/side_layout_coordinate"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/side_layout_coordinate_label"
                        android:background="@color/grey" />

                    <Button
                        android:id="@+id/side_layout_button_map"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/side_layout_coordinate"
                        android:layout_marginLeft="20dp"
                        android:background="@color/text_main"
                        android:text="@string/look_on_map_upper" />

                    <ImageButton
                        android:id="@+id/side_layout_button_menu"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/side_layout_button_map"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/text_main" />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <include
            android:id="@+id/side_layout_toolbar"
            layout="@layout/toolbar" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/side_layout_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/background"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigator_header_layout"
        app:menu="@menu/navigator_header_menu" />

</android.support.v4.widget.DrawerLayout>