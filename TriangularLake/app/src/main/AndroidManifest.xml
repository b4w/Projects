<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.triangularlake.constantine.triangularlake">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">

        <activity
            android:name=".activities.RegionsActivity"
            android:label="Triangular Lake">
            <intent-filter>
                <action android:name="ANDROID.INTENT.ACTION.MAIN" />
                <category android:name="ANDROID.INTENT.CATEGORY.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SectorsActivity">
            <intent-filter>
                <action android:name="SectorsActivity" />
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SectorActivity">
            <intent-filter>
                <action android:name="SectorActivity" />
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.FiltersActivity">
            <intent-filter>
                <action android:name="FiltersActivity" />
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.InformationActivity">
            <intent-filter>
                <action android:name="InformationActivity" />
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SideActivity">
            <intent-filter>
                <action android:name="SideActivity" />
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
