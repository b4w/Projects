<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.photoasgift.constantine.photoasgift">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="Photo as gift">
            <intent-filter>
                <action android:name="ANDROID.INTENT.ACTION.MAIN" />
                <category android:name="ANDROID.INTENT.CATEGORY.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.OrderActivity">
            <intent-filter>
                <action android:name="OrderActivity" />
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.CostActivity">
            <intent-filter>
                <action android:name="CostActivity" />
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
